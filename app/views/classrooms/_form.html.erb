<%= form_for @classroom, html: {class: "form-horizontal"} do |f| %>
  <% if @classroom.errors.any? %>
    <div class="bg-danger">
      <% @classroom.errors.each do |attribute, message| %>
        <p class="text-muted"><%= attribute%> - <%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Estuidante", class: "col-md-2 control-label", for: "selectbasic" %>
    <div class="col-md-4">
      <%= f.select :student_id, Student.all.collect { |s| [ s.name, s.id ] }, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "curso", class: "col-md-2 control-label", for: "selectbasic" %>
    <div class="col-md-4">
      <%= f.select :course_id, Course.all.collect { |c| [ c.name, c.id ] }, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Data", class: "col-md-2 control-label", for: "textinput" %>
    <div class="col-md-4">
      <%= datetime_local_field("classroom", "entry_at") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-7 pull-right">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
